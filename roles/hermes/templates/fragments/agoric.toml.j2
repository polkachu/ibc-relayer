[[chains]]
id = 'agoric-3'
{% include 'fragments/ports.toml.j2' %}


rpc_timeout = '20s'
account_prefix = 'agoric'
key_name = 'relayer'
address_type = { derivation = 'cosmos' }
store_prefix = 'ibc'
default_gas = 100000
