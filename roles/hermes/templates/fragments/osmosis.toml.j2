[[chains]]
id = 'osmosis-1'
{% include 'fragments/ports.toml.j2' %}


rpc_timeout = '20s'
account_prefix = 'osmo'
key_name = 'relayer'
address_type = { derivation = 'cosmos' }
store_prefix = 'ibc'
default_gas = 400000
max_gas = 120000000
gas_price = { price = 0.001, denom = 'uosmo' }
gas_multiplier = 1.5
max_msg_num = 30
max_tx_size = 1800000
clock_drift = '15s'
max_block_time = '10s'
trusting_period = '7days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }

[chains.packet_filter]
policy = 'allow'
list = [
  ['transfer', '*'],
  ['transfer', 'channel-169'], # Juno CW-20
]
