[[chains]]
id = 'darchub'
rpc_addr = 'http://{{ konstellation_ip }}:13357'
grpc_addr = 'http://{{ konstellation_ip }}:13390'
websocket_addr = 'ws://{{ konstellation_ip }}:13357/websocket'

rpc_timeout = '30s'
account_prefix = 'darc'
key_name = 'darc'
max_tx_size = 650000
store_prefix = 'ibc'
max_gas = 1000000 
gas_price = { price = 0.01, denom = 'udarc' }
gas_adjustment = 1
clock_drift ='10s'
trusting_period = '14days'
trust_threshold = { numerator = '1', denominator = '3' }
memo_prefix = '{{ memo }}'

[chains.packet_filter]
policy = 'allow'
list = [
  ['transfer', '*'],
]
