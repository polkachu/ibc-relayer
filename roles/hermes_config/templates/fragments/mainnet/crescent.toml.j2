[[chains]]
id = 'crescent-1'
rpc_addr = 'http://{{ crescent_ip }}:14557'
grpc_addr = 'http://{{ crescent_ip }}:14590'
websocket_addr = 'ws://{{ crescent_ip }}:14557/websocket'

rpc_timeout = '20s'
account_prefix = 'cre'
key_name = '{{ key_name }}'
address_type = { derivation = 'cosmos' }
store_prefix = 'ibc'
default_gas = 1000000
max_gas = 10000000
gas_price = { price = 0.01, denom = 'ucre' }
gas_multiplier = 1.2
max_msg_num = 30
max_tx_size = 1800000
clock_drift = '15s'
max_block_time = '10s'
trusting_period = '7days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }
