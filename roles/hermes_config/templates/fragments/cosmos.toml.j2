[[chains]]
id = 'cosmoshub-4'
rpc_addr = 'http://{{ cosmos_ip }}:14957'
grpc_addr = 'http://{{ cosmos_ip }}:14990'
websocket_addr = 'ws://{{ cosmos_ip }}:14957/websocket'

rpc_timeout = '20s'
account_prefix = 'cosmos'
key_name = 'relayer'
address_type = { derivation = 'cosmos' }
store_prefix = 'ibc'
default_gas = 300000
max_gas = 3500000
gas_price = { price = 0.0025, denom = 'uatom' }
gas_multiplier = 1.2
max_msg_num = 30
max_tx_size = 180000
clock_drift = '10s'
max_block_time = '10s'
trusting_period = '14days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }

[chains.packet_filter]
policy = 'allow'
list = [
  ['transfer', '*'],
]
