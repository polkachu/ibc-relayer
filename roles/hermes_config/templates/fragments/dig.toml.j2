[[chains]]
id = 'dig-1'
rpc_addr = 'http://{{ dig_ip }}:16357'
grpc_addr = 'http://{{ dig_ip }}:16390'
websocket_addr = 'ws://{{ dig_ip }}:16357/websocket'

rpc_timeout = '30s'
account_prefix = 'dig'
key_name = 'dig'
store_prefix = 'ibc'
max_gas = 7000000
max_tx_size = 1500000
gas_price = { price = 0.001, denom = 'udig' }
gas_adjustment = 0.1
clock_drift ='5s'
trusting_period = '7days'
memo_prefix = '{{ memo }}'

[chains.packet_filter]
policy = 'allow'
list = [
  ['transfer', '*'],
]
